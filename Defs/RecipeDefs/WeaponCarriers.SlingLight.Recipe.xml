    <jobString>Crafting</jobString>
    
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    
    <workSkill>Crafting</workSkill>
    <workSpeedStat>TailoringSpeed</workSpeedStat>
    <workAmount>900</workAmount>
    
    <defaultIngredientFilter>
      <thingDefs>
        <li>Synthread</li>
        <li>Hyperweave</li>
        <li>DevilstrandCloth</li>
        <li>BattleRattle_Miscellaneous_Buckle</li>
      </thingDefs>
    </defaultIngredientFilter>
    
    <fixedIngredientFilter>
      <thingDefs>
        <li>Synthread</li>
        <li>Hyperweave</li>
        <li>DevilstrandCloth</li>
        <li>BattleRattle_Miscellaneous_Buckle</li>
      </thingDefs>
    </fixedIngredientFilter>        
    
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Synthread</li>
            <li>Hyperweave</li>
            <li>DevilstrandCloth</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>BattleRattle_Miscellaneous_Buckle</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    
    <products>
      <BattleRattle_WeaponCarriers_SlingLight>1</BattleRattle_WeaponCarriers_SlingLight>
    </products>
    
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>10</minLevel>
      </li>
    </skillRequirements>
  </RecipeDef>

