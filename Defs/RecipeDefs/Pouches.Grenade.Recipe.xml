    <jobString>Crafting grenade pouch (frag)</jobString>
    
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    
    <workSkill>Crafting</workSkill>
    <workSpeedStat>TailoringSpeed</workSpeedStat>

    <workAmount>600</workAmount>
    <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    
    <defaultIngredientFilter>
      <thingDefs>
        <li>Synthread</li>
        <li>Hyperweave</li>
        <li>DevilstrandCloth</li>
        <li>BattleRattle_Miscellaneous_Buckle</li>
      </thingDefs>
    </defaultIngredientFilter>
    
    <fixedIngredientFilter>
      <thingDefs>
        <li>Synthread</li>
        <li>Hyperweave</li>
        <li>DevilstrandCloth</li>
        <li>BattleRattle_Miscellaneous_Buckle</li>
      </thingDefs>
    </fixedIngredientFilter>        
    
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Synthread</li>
            <li>Hyperweave</li>
            <li>DevilstrandCloth</li>
					</thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>BattleRattle_Miscellaneous_Buckle</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    
    <products>
      <BattleRattle_Pouches_Grenade_Frag>1</BattleRattle_Pouches_Grenade_Frag>
    </products>
    
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>6</minLevel>
      </li>
    </skillRequirements>
  </RecipeDef>

</RecipeDefs>
