    <products>
      <BattleRattle_Miscellaneous_Buckle>12</BattleRattle_Miscellaneous_Buckle>
    </products>

    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>3</minLevel>
      </li>
    </skillRequirements>
  </RecipeDef>

</RecipeDefs>
