<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY weaponCarrierBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/WeaponCarriers.Base.xml">
]>

<ThingDefs>

  &weaponCarrierBase;

  <ThingDef Class="BattleRattle.WeaponCarriers.WeaponCarrierDef" ParentName="BattleRattle_WeaponCarriers_Base">
    <thingClass>BattleRattle.WeaponCarriers.WeaponCarrier</thingClass>
    <!-- As of RW A9e, the graphicClass is not correctly read from the parent. -->
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_WeaponCarriers_HolsterShoulder</defName>
    
    <label>Shoulder Holster</label>
		<description>
      A shoulder holster that holds a side-arm under the arm. Easy to run with but has a tendency to pinch when operating heavy-machinery. It also helps in delivering snappy one-liners and cutting a dashing figure.  
    </description>
    
    <equipText>Draw</equipText>
    <storeText>Holster</storeText>
    
    <storablePattern>pistol</storablePattern>
    
    <graphicPath>BattleRattle/WeaponCarriers/HolsterShoulder/Icon</graphicPath>

    <costStuffCount>6</costStuffCount>

    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <commonality>1</commonality>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Glitter</li>
        <li>Military</li>
      </tags>
      <worngraphicPath>BattleRattle/WeaponCarriers/HolsterShoulder/Worn</worngraphicPath>
    </apparel>

    <equippedStatOffsets>
      <SocialImpact>0.05</SocialImpact>
      <WorkSpeedGlobal>-0.01</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <MaxHealth>100</MaxHealth>
      <WorkToMake>15000</WorkToMake>
    </statBases>
    
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>

  </ThingDef>

</ThingDefs>
