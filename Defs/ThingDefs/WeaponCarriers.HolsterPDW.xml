<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY weaponCarrierBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/WeaponCarriers.Base.xml">
]>

<ThingDefs>

  &weaponCarrierBase;

  <ThingDef Class="BattleRattle.WeaponCarriers.WeaponCarrierDef" ParentName="BattleRattle_WeaponCarriers_Base">
    <thingClass>BattleRattle.WeaponCarriers.WeaponCarrier</thingClass>
    <!-- As of RW A9e, the graphicClass is not correctly read from the parent. -->
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_WeaponCarriers_HolsterPDW</defName>
    
    <label>PDW Holster</label>
		<description>A large drop-leg holster that clips a personal defence weapon to the thigh. Bulk and heavy, hard to run with and snags on everything.</description>
    
    <equipText>Draw</equipText>
    <storeText>Holster</storeText>
    
    <storablePattern>pdw</storablePattern>
    
    <graphicPath>BattleRattle/WeaponCarriers/HolsterPDW/Icon</graphicPath>

    <costStuffCount>4</costStuffCount>

    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <commonality>1</commonality>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Military</li>
      </tags>
    </apparel>
    
    <equippedStatOffsets>
      <MoveSpeed>-0.02</MoveSpeed>
      <WorkSpeedGlobal>-0.01</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <MaxHealth>100</MaxHealth>
      <WorkToMake>15000</WorkToMake>
    </statBases>
    
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>

  </ThingDef>

</ThingDefs>
