<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY pouchBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/Pouches.Base.xml">
]>

<ThingDefs>

  &pouchBase;

  <ThingDef Class="BattleRattle.Pouches.IFAKDef" ParentName="BattleRattle_Pouches_Base">
    <!-- As of RW A9, thingClass and graphicClass are not correctly read from the parent. -->
    <thingClass>BattleRattle.Pouches.IFAK</thingClass>
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_Pouches_IFAK</defName>
    
    <label>IFAK</label>
		<description>A pouch containing a medical kit for immediate battlefield treatment. The wearer can use this themselves and doctors can use it to treat the wearer.</description>
    <graphicPath>BattleRattle/Pouches/IFAK/Icon</graphicPath>

    <ticksForPacking>120</ticksForPacking>
    <packRadius>20</packRadius>
    
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <commonality>1</commonality>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Military</li>
        <li>MilitaryCold</li>
      </tags>
    </apparel>

    <equippedStatOffsets>
      <AimingDelayFactor>-1.0</AimingDelayFactor>
      <MoveSpeed>-0.1</MoveSpeed>
      <WorkSpeedGlobal>-1.0</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <MarketValue>1000</MarketValue>
      <SellPriceFactor>0.5</SellPriceFactor>

      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
      <Insulation_Cold>-5</Insulation_Cold>
      
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <MaxHealth>250</MaxHealth>
      
      <WorkToMake>24000</WorkToMake>
    </statBases>

  </ThingDef>

</ThingDefs>
