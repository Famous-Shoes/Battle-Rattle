<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY pouchBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/Pouches.Base.xml">
]>

<ThingDefs>

  &pouchBase;

  <ThingDef Class="BattleRattle.Pouches.IFAKDef" ParentName="BattleRattle_Pouches_Base">
    <thingClass>BattleRattle.Pouches.IFAK</thingClass>
    <defName>BattleRattle_Pouches_IFAK</defName>
    
    <label>IFAK</label>
		<description>A pouch containing a medical kit for immediate battlefield treatment. The wearer can use this themselves and doctors can use it to treat the wearer.</description>
    <graphicData>
      <texPath>BattleRattle/Pouches/IFAK/Icon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <ticksForPacking>120</ticksForPacking>
    <packRadius>20</packRadius>
    
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <commonality>0.30</commonality>
      <layers>
        <li>Accessory</li>
      </layers>
      <tags>
        <li>Military</li>
        <li>MilitaryCold</li>
      </tags>
    </apparel>

    <equippedStatOffsets>
      <AimingDelayFactor>0.00</AimingDelayFactor>
      <MoveSpeed>-0.01</MoveSpeed>
      <SocialImpact>0.00</SocialImpact>
      <WorkSpeedGlobal>-0.01</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <ArmorRating_Blunt>0.001</ArmorRating_Blunt>
      <ArmorRating_Electric>0.00</ArmorRating_Electric>
      <ArmorRating_Heat>0.00</ArmorRating_Heat>
      <ArmorRating_Sharp>0.002</ArmorRating_Sharp>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <Insulation_Cold>0.00</Insulation_Cold>
      <Insulation_Heat>-0.50</Insulation_Heat>
      <MarketValue>70</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
    </statBases>

  </ThingDef>

</ThingDefs>
