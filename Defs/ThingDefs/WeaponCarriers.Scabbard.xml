<ThingDefs>

  &weaponCarrierBase;

  <ThingDef Class="BattleRattle.WeaponCarriers.WeaponCarrierDef" ParentName="BattleRattle_WeaponCarriers_Base">
    <thingClass>BattleRattle.WeaponCarriers.WeaponCarrier</thingClass>
    <defName>BattleRattle_WeaponCarriers_Scabbard</defName>
    
    <label>Scabbard</label>
		<description>
      A long scabbard for a sword or gladius. Hard as hell to run with a sword flapping about and it gets the wearer pulled into large machinery at every opportunity. But, when standing still far behind the lines, it does look mighty heroic.
    </description>
    <techLevel>Neolithic</techLevel>

    <equipText>Draw</equipText>
    <storeText>Sheath</storeText>
    <capacity>1</capacity>
    
    <storablePattern>(machete|gladius|sword)</storablePattern>
    <graphicData>
      <texPath>BattleRattle/WeaponCarriers/Scabbard/Icon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <commonality>0.05</commonality>
      <layers>
        <li>Accessory</li>
      </layers>
      <tags>
        <li>Tribal</li>
        <li>TribalWinter</li>
      </tags>
   </apparel>
    
    <equippedStatOffsets>
      <AimingDelayFactor>0.00</AimingDelayFactor>
      <MoveSpeed>-1.00</MoveSpeed>
      <SocialImpact>0.10</SocialImpact>
      <WorkSpeedGlobal>-0.50</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <ArmorRating_Blunt>0.001</ArmorRating_Blunt>
      <ArmorRating_Electric>0.00</ArmorRating_Electric>
      <ArmorRating_Heat>0.00</ArmorRating_Heat>
