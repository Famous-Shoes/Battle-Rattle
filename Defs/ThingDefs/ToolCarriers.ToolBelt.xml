<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY weaponCarrierBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/WeaponCarriers.Base.xml">
]>

<ThingDefs>

  &weaponCarrierBase;

  <ThingDef Class="BattleRattle.WeaponCarriers.WeaponCarrierDef" ParentName="BattleRattle_WeaponCarriers_Base">
    <thingClass>BattleRattle.WeaponCarriers.WeaponCarrier</thingClass>
    <!-- As of RW A9e, the graphicClass is not correctly read from the parent. -->
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_ToolCarriers_ToolBelt</defName>
    
    <label>Engineer's Belt</label>
		<description>
      A heavy engineer's toolbelt, which can hold three tools.
    </description>
    
    <equipText>Ready</equipText>
    <storeText>Stow</storeText>
    <capacity>3</capacity>
    
    <storablePattern>(chiphook|hammer|nailgun|wrench)</storablePattern>
    
    <graphicPath>BattleRattle/ToolCarriers/ToolBelt/Icon</graphicPath>

    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <commonality>0.20</commonality>
      <layers>
        <li>Accessory</li>
      </layers>
      <tags>
        <li>Outlander</li>
        <li>Spacer</li>
      </tags>
    </apparel>

    <equippedStatOffsets>
      <AimingDelayFactor>0.00</AimingDelayFactor>
      <MoveSpeed>-0.20</MoveSpeed>
      <SocialImpact>0.00</SocialImpact>
      <WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <ArmorRating_Blunt>0.00</ArmorRating_Blunt>
      <ArmorRating_Electric>0.00</ArmorRating_Electric>
      <ArmorRating_Heat>0.00</ArmorRating_Heat>
      <ArmorRating_Sharp>0.001</ArmorRating_Sharp>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <Insulation_Cold>0.00</Insulation_Cold>
      <Insulation_Heat>-0.25</Insulation_Heat>
      <MarketValue>30</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
    </statBases>
    
  </ThingDef>

</ThingDefs>
