<?xml version="1.0" encoding="utf-8" ?>
<Resources>

  <ThingDef Class="BattleRattle.BattleFieldMedicine.TraumaKitDef">
    <defName>BattleRattle_BattleFieldMedicine_TraumaKit</defName>
    <category>Item</category>
    <thingClass>Medicine</thingClass>

    <label>Trauma Kit</label>
    <description>Used by medics and operators to quickly treat the most traumatic wounds while still in the field.</description>

    <altitudeLayer>Item</altitudeLayer>
    <pathCost>15</pathCost>

    <drawGUIOverlay>true</drawGUIOverlay>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <stackLimit>75</stackLimit>

    <useHitPoints>true</useHitPoints>
    
    <graphicData>
      <texPath>BattleRattle/BattleFieldMedicine/TraumaKit/Icon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    
    <ticksForTreatment>600</ticksForTreatment>

    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
    </comps>

    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>25</MarketValue>
      <Flammability>1.0</Flammability>
      <MedicalPotency>0.5</MedicalPotency>
      <DeteriorationRate>1</DeteriorationRate>
    </statBases>

    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
  </ThingDef>

</Resources>