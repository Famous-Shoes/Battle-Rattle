<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY weaponCarrierBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/WeaponCarriers.Base.xml">
]>

<ThingDefs>

  &weaponCarrierBase;

  <ThingDef Class="BattleRattle.WeaponCarriers.WeaponCarrierDef" ParentName="BattleRattle_WeaponCarriers_Base">
    <thingClass>BattleRattle.WeaponCarriers.WeaponCarrier</thingClass>
    <!-- As of RW A9e, the graphicClass is not correctly read from the parent. -->
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_WeaponCarriers_SlingHeavy</defName>
    
    <label>Heavy Combat Sling</label>
		<description>
      A heavily padded combat sling for carrying a light machine gun. Some have been rumoured to use this to carry a minigun about. But this isn't the movies, so don't do that.
    </description>
    
    <equipText>Ready</equipText>
    <storeText>Sling</storeText>
    <capacity>1</capacity>
    
    <storablePattern>(lmg|m76revenant|mhundredthirtyfour|minigun|milkormgl|railgun)</storablePattern>
    
    <graphicPath>BattleRattle/WeaponCarriers/SlingHeavy/Icon</graphicPath>

    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <commonality>0.10</commonality>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Military</li>
        <li>MilitaryCold</li>
      </tags>
    </apparel>

    <equippedStatOffsets>
      <AimingDelayFactor>0.00</AimingDelayFactor>
      <MoveSpeed>-0.30</MoveSpeed>
      <SocialImpact>0.00</SocialImpact>
      <WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <ArmorRating_Blunt>0.001</ArmorRating_Blunt>
      <ArmorRating_Electric>0.00</ArmorRating_Electric>
      <ArmorRating_Heat>0.00</ArmorRating_Heat>
      <ArmorRating_Sharp>0.003</ArmorRating_Sharp>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <Insulation_Cold>0.00</Insulation_Cold>
      <Insulation_Heat>-0.50</Insulation_Heat>
      <MarketValue>60</MarketValue>
      <MaxHealth>100</MaxHealth>
    </statBases>
    
  </ThingDef>

</ThingDefs>
