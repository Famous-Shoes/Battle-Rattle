<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY ruckBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/Rucks.Base.xml">
]>

<ThingDefs>

  &ruckBase;

  <ThingDef Class="BattleRattle.Rucks.RuckDef" ParentName="BattleRattle_Rucks_Base">
    <!-- As of RW A9, thingClass and graphicClass are not correctly read from the parent. -->
    <thingClass>BattleRattle.Rucks.Ruck</thingClass>
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_Rucks_LongRange</defName>
    
    <label>Long-Range Ruck</label>
		<description>A large-frame rucksack for carrying all the ammo all the way. When carried, it's almost impossible to fight, work, or do anything other than tab on.</description>
    <graphicPath>BattleRattle/Rucks/LongRange/Icon</graphicPath>

    <capacity>400000</capacity>
    <packRadius>20</packRadius>

    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <commonality>0.10</commonality>
      <layers>
        <li>Accessory</li>
      </layers>
      <tags>
        <li>Military</li>
        <li>MilitaryCold</li>
      </tags>
    </apparel>

    <equippedStatOffsets>
      <AimingDelayFactor>0.50</AimingDelayFactor>
      <MoveSpeed>-5.00</MoveSpeed>
      <SocialImpact>0.00</SocialImpact>
      <WorkSpeedGlobal>-0.50</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <ArmorRating_Blunt>0.040</ArmorRating_Blunt>
      <ArmorRating_Electric>0.00</ArmorRating_Electric>
      <ArmorRating_Heat>0.00</ArmorRating_Heat>
      <ArmorRating_Sharp>0.030</ArmorRating_Sharp>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <Insulation_Cold>-2.50</Insulation_Cold>
      <Insulation_Heat>-5.00</Insulation_Heat>
      <MarketValue>200</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
    </statBases>
    
  </ThingDef>

</ThingDefs>
