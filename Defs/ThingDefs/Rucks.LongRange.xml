<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY ruckBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/Rucks.Base.xml">
]>

<ThingDefs>

  &ruckBase;

  <ThingDef Class="BattleRattle.Rucks.RuckDef" ParentName="BattleRattle_Rucks_Base">
    <!-- As of RW A9, thingClass and graphicClass are not correctly read from the parent. -->
    <thingClass>BattleRattle.Rucks.Ruck</thingClass>
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_Rucks_LongRange</defName>
    
    <label>Long-Range Ruck</label>
		<description>A large-frame rucksack for carrying all the ammo all the way. When carried, it's almost impossible to fight, work, or do anything other than tab on.</description>
    <graphicPath>BattleRattle/Rucks/LongRange/Icon</graphicPath>

    <capacity>1000000</capacity>
    <packRadius>20</packRadius>
    <costStuffCount>150</costStuffCount>

    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <commonality>1</commonality>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Military</li>
      </tags>
      <worngraphicPath>BattleRattle/Rucks/LongRange/Worn</worngraphicPath>
    </apparel>

    <equippedStatOffsets>
      <AimingDelayFactor>-1.0</AimingDelayFactor>
      <MoveSpeed>-0.1</MoveSpeed>
      <WorkSpeedGlobal>-1.0</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <MarketValue>1000</MarketValue>
      <SellPriceFactor>0.5</SellPriceFactor>

      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
      <Insulation_Cold>-5</Insulation_Cold>
      
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <MaxHealth>250</MaxHealth>
      
      <WorkToMake>24000</WorkToMake>
    </statBases>

  </ThingDef>

</ThingDefs>
