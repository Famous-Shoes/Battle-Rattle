<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY ruckBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/Rucks.Base.xml">
]>

<ThingDefs>

  &ruckBase;

  <ThingDef Class="BattleRattle.Rucks.RuckDef" ParentName="BattleRattle_Rucks_Base">
    <!-- As of RW A9, thingClass and graphicClass are not correctly read from the parent. -->
    <thingClass>BattleRattle.Rucks.Ruck</thingClass>
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_Rucks_Basic</defName>
    
    <label>Basic Rucksack</label>
		<description>A basic medium-sized rucksack without a frame. Uncomfortable, poorly balanced, but any fool with some cloth and a needle can make one.</description>
    <graphicPath>BattleRattle/Rucks/Basic/Icon</graphicPath>

    <capacity>70000</capacity>
    <packRadius>10</packRadius>
    
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <commonality>1.00</commonality>
      <layers>
        <li>Accessory</li>
      </layers>
      <tags>
        <li>Tribal</li>
        <li>TribalWinter</li>
      </tags>
    </apparel>

    <equippedStatOffsets>
      <AimingDelayFactor>0.30</AimingDelayFactor>
      <MoveSpeed>-0.01</MoveSpeed>
      <SocialImpact>0.00</SocialImpact>
      <WorkSpeedGlobal>-0.01</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <ArmorRating_Blunt>0.015</ArmorRating_Blunt>
      <ArmorRating_Electric>0.00</ArmorRating_Electric>
      <ArmorRating_Heat>0.00</ArmorRating_Heat>
      <ArmorRating_Sharp>0.010</ArmorRating_Sharp>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <Insulation_Cold>-2.00</Insulation_Cold>
      <Insulation_Heat>-4.00</Insulation_Heat>
      <MarketValue>50</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
    </statBases>
    
  </ThingDef>

</ThingDefs>
