<!DOCTYPE doc [
  <!ENTITY weaponCarrierBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/WeaponCarriers.Base.xml">
]>

<ThingDefs>

  &weaponCarrierBase;

  <ThingDef Class="BattleRattle.WeaponCarriers.WeaponCarrierDef" ParentName="BattleRattle_WeaponCarriers_Base">
    <thingClass>BattleRattle.WeaponCarriers.WeaponCarrier</thingClass>
    <!-- As of RW A9e, the graphicClass is not correctly read from the parent. -->
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_WeaponCarriers_Sheath</defName>
    
    <label>Sheath</label>
		<description>A short scabbard for a knife.</description>
    
    <equipText>Draw</equipText>
    <storeText>Sheath</storeText>
    
    <storablePattern>knife</storablePattern>
    
    <graphicPath>BattleRattle/WeaponCarriers/Sheath/Icon</graphicPath>

    <costStuffCount>2</costStuffCount>
    
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <commonality>1</commonality>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Military</li>
      </tags>
    </apparel>
    
    <equippedStatOffsets>
      <MoveSpeed>-0.01</MoveSpeed>
      <WorkSpeedGlobal>-0.01</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <MaxHealth>100</MaxHealth>
      <WorkToMake>15000</WorkToMake>
    </statBases>
    
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    
  </ThingDef>

</ThingDefs>
