    <selectable>true</selectable>

    <repairEffect>Repair</repairEffect>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>

    <AltitudeLayer>Waist</AltitudeLayer>
    <surfaceType>Item</surfaceType>
    <pathCost>70</pathCost>
    <Passability>PassThroughOnly</Passability>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>

    <costStuffCount>6</costStuffCount>
    <fillPercent>0.5</fillPercent>
    <filthLeaving>BuildingRubble</filthLeaving>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <researchPrerequisite>BattleRattle_BattleFieldMedicine_Research</researchPrerequisite>
    <useHitPoints>True</useHitPoints>
    
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>BattleRattle/BattleFieldMedicine/MedicsTable/Icon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <Size>(1,1)</Size>
    
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
    </comps>
    
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    
    <recipes>
      <li>BattleRattle_BattleFieldMedicine_TraumaKit_Recipe</li>
    </recipes>

    <statBases>
      <WorkToMake>25</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>

    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    
  </ThingDef>
</ThingDefs>