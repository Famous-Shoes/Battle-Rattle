<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE doc [
  <!ENTITY weaponCarrierBase SYSTEM "Mods/Battle Rattle/Defs/BaseDefs/WeaponCarrier.Base.xml">
]>

<ThingDefs>

  &weaponCarrierBase;

  <ThingDef Class="BattleRattle.WeaponCarriers.WeaponCarrierDef" ParentName="BattleRattle_WeaponCarrier_Base">
    <thingClass>BattleRattle.WeaponCarriers.WeaponCarrier</thingClass>
    <!-- As of RW A9e, the graphicClass is not correctly read from the parent. -->
    <graphicClass>Graphic_Single</graphicClass>
    
    <defName>BattleRattle_WeaponCarrier_Scabbard</defName>
    
    <label>Scabbard</label>
		<description>
      A long scabbard for a sword or gladius. Hard as hell to run with a sword flapping about and it gets the wearer pulled into large machinery at every opportunity. But, when standing still far behind the lines, it does look mighty heroic.
    </description>
    
    <equipText>Draw</equipText>
    <storeText>Sheath</storeText>
    
    <storablePattern>(sword|gladius)</storablePattern>
    <graphicPath>BattleRattle/WeaponCarrier/Scabbard/Icon</graphicPath>

    <costStuffCount>3</costStuffCount>

    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <commonality>1</commonality>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Glitter</li>
      </tags>
    </apparel>
    
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
      <SocialImpact>0.10</SocialImpact>
      <WorkSpeedGlobal>-0.1</WorkSpeedGlobal>
    </equippedStatOffsets>

    <statBases>
      <DeteriorationRate>1</DeteriorationRate>
      <Flammability>1.0</Flammability>
      <MaxHealth>100</MaxHealth>
      <WorkToMake>15000</WorkToMake>
    </statBases>
    
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>

  </ThingDef>

</ThingDefs>
